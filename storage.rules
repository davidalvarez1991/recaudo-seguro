rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permite a los proveedores subir su logo. La ruta está protegida por la lógica de la app.
    match /proveedores/{providerId}/logo/{fileName} {
      allow read, write: if true;
    }

    // Por defecto, deniega el acceso al resto de las rutas.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
