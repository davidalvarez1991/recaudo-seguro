
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // ATENCIÓN: Esta regla permite el acceso público a toda la base de datos.
    // Es una medida temporal para resolver problemas de permisos y no es segura para producción.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
